{
  "name": "IMDb Watchlist Warzat",
  "short_name": "Warzat",
  "version": "1.7.1",
  "manifest_version": 2,
  "description": "Decorates your IMDb watchlist with an indicator and a link when a movie is available for Netflix or Redbox streaming.",
  "options_page": "options.html",
  
  "content_scripts": [
    {
      "matches": ["http://www.imdb.com/*/watchlist*", "http://www.imdb.com/list/*"],
      "run_at": "document_end",
      "css": ["warzat.css","ui-lightness/jquery-ui-1.9.2.custom.min.css"],
      "js": ["lib/jquery-1.11.0.min.js","lib/jquery-ui-1.9.2.custom.min.js",
	      "lib/sha1.js","lib/oauth.js", "lib/md5.js",
	      "lib/parse-1.2.12.min.js",
	      "rovi-accessor.js", "netflix-accessor.js","redbox-accessor.js", "parse-accessor.js",
	      "options-common.js", 
	      "tv-listings.js", 
	      "hulu-searcher.js","redbox-searcher.js","netflix-searcher.js","itunes-searcher.js",
	      "warzat.js"]
    }
  ],
  
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  
  "permissions": [
      "http://api-public.netflix.com/",
      "https://api.redbox.com/",
      "http://m.hulu.com/",
      "http://api.rovicorp.com/",
      "http://api.parse.com/",
      "https://itunes.apple.com/",
      
      "storage"
  ],
  
  "web_accessible_resources": [
    "images/Netflix.png",
    "images/Redbox.png",
    "images/Hulu.png",
    "images/iTunes.png"
  ],
  
  "icons": { "16": "icon16.png",
           "48": "icon48.png",
          "128": "icon128.png" }
}